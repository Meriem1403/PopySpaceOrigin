{% extends 'base.html.twig' %}

{% block title %}Détails du voyage{% endblock %}

{% block body %}
    <div class="m-4 p-4 bg-gray-800 rounded-lg">
        <h1 class="text-xl font-semibold text-white mb-4">Détails du voyage</h1>

        <table class="min-w-full bg-gray-800 text-white">
            <tbody class="bg-gray-700 divide-y divide-gray-600">
            <tr>
                <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">ID</th>
                <td class="px-6 py-4 whitespace-nowrap">{{ voyage.id }}</td>
            </tr>
            <tr>
                <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Objectif</th>
                <td class="px-6 py-4">{{ voyage.objectif }}</td>
            </tr>
            <tr>
                <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Date de départ</th>
                <td class="px-6 py-4 whitespace-nowrap">
                    {{ voyage.depart ? voyage.depart|date('Y-m-d H:i:s') : 'Non défini' }}
                </td>
            </tr>
            <tr>
                <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Planète</th>
                <td class="px-6 py-4">{{ voyage.planete.nom }}</td>
            </tr>
            <tr>
                <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Trou de ver</th>
                <td class="px-6 py-4">
                    {% if voyage.upgradeTrouDeVer %}
                        <span class="text-green-400 font-semibold">Oui</span>
                    {% else %}
                        <span class="text-red-400">Non</span>
                    {% endif %}
                </td>
            </tr>
            </tbody>
        </table>

        <div class="flex space-x-4 mt-6">
            <a href="{{ path('app_voyage_index') }}" class="inline-flex items-center px-4 py-2 text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                Retour à la liste
            </a>

            <a href="{{ path('app_voyage_edit', { id: voyage.id }) }}" class="inline-flex items-center px-4 py-2 text-sm font-medium rounded-md text-white bg-yellow-600 hover:bg-yellow-700">
                Modifier
            </a>

            {{ include('voyage/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
