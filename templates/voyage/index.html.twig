{% extends 'base.html.twig' %}

{% block title %}Gérer les voyages{% endblock %}

{% block body %}
    <div class="m-4 p-4 bg-gray-800 rounded-lg">
        <div class="flex justify-between items-center mb-4">
            <h1 class="text-xl font-semibold text-white">Voyages</h1>

            <a
                href="{{ path('app_voyage_new') }}"
                class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700"
            >
                <span>Nouveau voyage</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 ml-2" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M9 12h6" />
                    <path d="M12 9v6" />
                </svg>
            </a>
        </div>

        <table class="min-w-full bg-gray-800 text-white text-sm rounded overflow-hidden" id="voyage-list">
            <thead class="border-b border-gray-700">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">ID</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Objectif</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Départ</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Actions</th>
            </tr>
            </thead>
            <tbody class="divide-y divide-gray-600">
            {% for voyage in voyages %}
                {{ include('voyage/_row.html.twig', { voyage: voyage }) }}
            {% else %}
                <tr>
                    <td colspan="4" class="px-6 py-4 text-center text-gray-400">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
