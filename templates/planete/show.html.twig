{# templates/planete/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Planète{% endblock %}

{% block body %}
    <div class="m-4 p-4 bg-gray-800 rounded-lg">
        <h1 class="text-xl font-semibold text-white mb-4">Planète</h1>

        <turbo-frame id="planete-info">
            <table class="min-w-full bg-gray-800 text-white">
                <tbody class="bg-gray-700 divide-y divide-gray-600">
                <tr>
                    <th class="w-1/6 px-2 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                        Photo
                    </th>
                    <td class="px-2 py-4">
                        <img
                            class="flex-shrink-0 w-16 h-16 bg-gray-600 rounded-full transition duration-300 ease-in-out"
                            src="{{ asset('images/' ~ planete.image) }}"
                            alt="Image de {{ planete.nom }}"
                        >
                    </td>
                </tr>
                <tr>
                    <th class="px-2 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                        Nom
                    </th>
                    <td class="px-2 py-4">{{ planete.nom }}</td>
                </tr>
                <tr>
                    <th class="px-2 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                        Distance (années‑lumière)
                    </th>
                    <td class="px-2 py-4 whitespace-nowrap">
                        {{ planete.distanceLumiereTerre|round(2, 'common') }}
                    </td>
                </tr>
                <tr>
                    <th class="px-2 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                        Description
                    </th>
                    <td class="px-2 py-4">{{ planete.description }}</td>
                </tr>
                </tbody>
            </table>

            <div class="mt-2 hidden turbo-frame:block">
                <a href="{{ path('app_homepage') }}" class="text-sm text-gray-400 hover:underline">&larr; Retour à l’accueil</a>
                <a data-turbo-frame="_top" href="{{ path('app_planete_edit', { id: planete.id }) }}" class="ml-4 text-sm text-gray-400 hover:underline">
                    Modifier en modal
                </a>
            </div>
        </turbo-frame>

        <div class="flex space-x-4 mt-6">
            <a href="{{ path('app_planete_index') }}"
               class="inline-flex items-center px-4 py-2 text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                Retour à la liste
            </a>

            <a href="{{ path('app_planete_edit', { id: planete.id }) }}"
               class="inline-flex items-center px-4 py-2 text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700">
                Modifier
            </a>

            {{ include('planete/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
