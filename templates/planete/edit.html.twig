{# templates/planete/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier une planète{% endblock %}

{% block body %}
    <div class="m-4 p-4 bg-gray-800 rounded-lg">
        <div class="flex justify-between">
            <h1 class="text-xl font-semibold text-white mb-4">Modifier une planète</h1>

            <div class="mr-4">
                <a href="{{ path('app_planete_index') }}" class="text-sm font-medium text-white hover:underline">
                    Retour à la liste
                </a>
                <div class="inline-block">
                    {% if form.vars.data.id is not null %}
                        {{ include('planete/_delete_form.html.twig') }}
                    {% endif %}
                </div>
            </div>
        </div>

        {{ include('planete/_form.html.twig', { button_label: 'Modifier' }) }}
    </div>
{% endblock %}
