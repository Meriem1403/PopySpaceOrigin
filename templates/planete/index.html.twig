{# templates/planete/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Gérer les planètes{% endblock %}

{% block body %}
    <div class="m-4 p-4 bg-gray-800 rounded-lg">
        <h1 class="text-xl font-semibold text-white mb-4">Planètes</h1>

        <table class="min-w-full bg-gray-800 text-white">
            <thead class="border-b border-gray-700">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">ID</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Nom</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Description</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Distance (années‑lumière)</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Actions</th>
            </tr>
            </thead>
            <tbody class="divide-y divide-gray-600">
            {% for planete in planetes %}
                <tr class="even:bg-gray-700 odd:bg-gray-600">
                    <td class="px-6 py-4 whitespace-nowrap">{{ planete.id }}</td>
                    <td class="px-6 py-4 whitespace-nowrap">{{ planete.nom }}</td>
                    <td class="px-6 py-4">{{ planete.description }}</td>
                    <td class="px-6 py-4 whitespace-nowrap">{{ planete.distanceLumiereTerre|round(2, 'floor') }}</td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <a href="{{ path('app_planete_show', { id: planete.id }) }}" class="text-blue-400 hover:text-blue-600">voir</a>
                        <a href="{{ path('app_planete_edit', { id: planete.id }) }}" class="ml-4 text-yellow-400 hover:text-yellow-600">modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="px-6 py-4 whitespace-nowrap text-center text-gray-400">
                        Aucun enregistrement trouvé
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_planete_new') }}"
           class="mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700">
            Créer une nouvelle planète
        </a>
    </div>
{% endblock %}
