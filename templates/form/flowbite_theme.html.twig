{# templates/form/flowbite_theme.html.twig #}

{% block form_row %}
    <div class="mb-6">
        {{ form_label(form) }}
        {{ form_widget(form) }}
        {{ form_errors(form) }}
    </div>
{% endblock %}

{% block form_label %}
    {% if label is not same as(false) %}
        <label
            for="{{ id }}"
            class="block text-sm font-medium text-gray-200 mb-2"
        >
            {{ label|trans({}, translation_domain) }}
        </label>
    {% endif %}
{% endblock %}

{% block form_widget_simple %}
    <input
        type="{{ type|default('text') }}"
        id="{{ id }}"
        name="{{ full_name }}"
        value="{{ value }}"
        {{ block('widget_attributes') }}
        class="w-full bg-gray-900 text-white border border-gray-600 rounded-md p-2 shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none"
    />
{% endblock %}

{% block form_textarea_widget %}
    {# On force le textarea à ressembler à un input (même style) #}
    <input
        type="text"
        id="{{ id }}"
        name="{{ full_name }}"
        value="{{ value }}"
        {{ block('widget_attributes') }}
        class="w-full bg-gray-900 text-white border border-gray-600 rounded-md p-2 shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none"
    />
{% endblock %}

{% block choice_widget_expanded %}
    <div class="grid gap-3">
        {% for child in form %}
            <div class="flex items-center space-x-2">
                {{ form_widget(child) }}
                <label for="{{ child.vars.id }}" class="text-white text-sm">
                    {{ child.vars.label }}
                </label>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block radio_widget %}
    <input
        type="radio"
        id="{{ id }}"
        name="{{ full_name }}"
        value="{{ value }}"
        {% if checked %}checked="checked"{% endif %}
        {{ block('widget_attributes') }}
        class="text-blue-600 bg-gray-900 border-gray-600 focus:ring-2 focus:ring-blue-500 rounded"
    />
{% endblock %}

{% block checkbox_widget %}
    <input
        type="checkbox"
        id="{{ id }}"
        name="{{ full_name }}"
        value="{{ value }}"
        {% if checked %}checked="checked"{% endif %}
        {{ block('widget_attributes') }}
        class="text-blue-600 bg-gray-900 border-gray-600 focus:ring-2 focus:ring-blue-500 rounded"
    />
{% endblock %}

{% block form_errors %}
    {% if errors|length > 0 %}
        <p class="text-red-400 text-sm mt-2">
            {{ errors|first.message }}
        </p>
    {% endif %}
{% endblock %}
